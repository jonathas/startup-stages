{
  "name": "startup-stages",
  "version": "0.0.1",
  "description": "A GraphQL API for documenting the stages and steps that a startup needs to go through",
  "author": "Jonathas Ribeiro <contact@jonathas.com>",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=18.18.0"
  },
  "bugs": {
    "url": "https://github.com/jonathas/startup-stages/issues"
  },
  "homepage": "https://github.com/jonathas/startup-stages#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jonathas/startup-stages.git"
  },
  "keywords": [
    "startup",
    "nodejs",
    "typescript",
    "graphql"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/main.js",
    "start:dev": "nodemon --watch src src/main.ts",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:cov:watch": "jest --watch --coverage",
    "prepare": "husky install",
    "postinstall": "npm run build",
    "release": "release-it"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@apollo/server": "^4.9.5",
    "@as-integrations/fastify": "^2.1.1",
    "@fastify/compress": "^6.5.0",
    "@fastify/cors": "^8.4.1",
    "class-validator": "^0.14.0",
    "dotenv": "^16.3.1",
    "fastify": "^4.24.3",
    "graphql": "^16.8.1",
    "nexus": "^1.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.2.0",
    "@commitlint/config-conventional": "^18.1.0",
    "@release-it/conventional-changelog": "^7.0.2",
    "@types/jest": "^29.5.7",
    "@types/node": "^20.8.10",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "auto-changelog": "^2.4.0",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-max-params-no-constructor": "^0.0.4",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-sonarjs": "^0.22.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.2",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "release-it": "^16.2.1",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "jest": {
    "clearMocks": true,
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "roots": [
      "<rootDir>"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.{service,model}.ts"
    ],
    "coverageDirectory": "coverage",
    "testEnvironment": "node"
  },
  "auto-changelog": {
    "output": "./CHANGELOG.md"
  }
}
